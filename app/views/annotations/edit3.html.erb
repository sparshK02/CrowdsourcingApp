<% provide(:title, "Complete Task") %>
<% id = params[:annotation_id] || params[:id] %> 
<%@annotation = Annotation.find(id)%>

<div class = "full-page">

<%= form_with(model: @annotation)do |f| %>

<div class="sticky-top">
<div class= "instructions">
<h1>Instructions: </h1>
<p><b>Determine the level of relevancy for each product description snippet</b> with regard to the question.</p>
<p> The Product, Item ID, and original Question are given to you below: </p>
<h3> <b>Product:</b> <%= @annotation.product%><h3>
<h3> <b>Item ID:</b> <%= @annotation.itemID%><h3>
<h3> <b>Question:</b> <%= @annotation.question%><h3>
</div>
<div class= "notes-section">
<%= f.label "Enter any notes/concerns here:", style: 'font-size: 13px;'%>
<%= f.text_field :description_note, style: 'height:40px !important;' %>
</div>
</div>

<div class="page-content">




  <div class = "header">
  <h3><b>Product Descriptions:</b></h3>
  </div>
  <br>
  <% if (@annotation.productDesc == "[]" or @annotation.productDesc == nil or @annotation.productDesc.size == 0) %>
    <p> No Product Descriptions for this product, move on to the next section. <p>
  <% else %>
  <div class = "evidence-list">
    <% @annotation.productDesc.each do |desc|%>
        <ul>
        <li> 
        
            <%= desc%> 
            <br>
            
            <div class = "checkbox-list">
              <%= f.check_box :highly_relevant_descriptions, {multiple: true}, desc.to_json%>
              <%= f.label :highly_relevant_descriptions, "Highly Relevant"%> <br>
              <%= f.check_box :partially_relevant_descriptions, {multiple: true}, desc.to_json%>
              <%= f.label :partially_relevant_descriptions, "Partially Relevant"%> <br>
              <%= f.check_box :irrelevant_descriptions, {multiple: true}, desc.to_json%>
              <%= f.label :irrelevant_descriptions, "Irrelevant"%> <br>
              <%= f.check_box :not_sure_descriptions, {multiple: true}, desc.to_json%>
              <%= f.label :not_sure_descriptions, "Not Sure"%> <br>
            </div>
        </li>
        </ul>
    <% end %>
    </div>
  <% end %>

<br>


<%= f.hidden_field :formStage, value: 3%>
<%= f.hidden_field :annotatorID, value: current_user.annotatorID%>


<div class="actions">
    <%= link_to "Go Back", complete_task2_path(@annotation), class: 'go-back'%>
    <%= f.submit "Next Section", class: 'next-section'%>
  </div>

<% end %>

</div>
</div>
